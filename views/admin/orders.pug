extends ../layout/common

block content
  .row
    .col-sm-12.col-md-2
      include ../layout/sidebar
    .col-sm-12.col-md-10
      table.table.table-hover
        thead
          tr
            th(scope='col')
              form(action="/admin/dashboard/orders/search", method="GET")
                input.p-1(name="customer", type="text", placeholder="Search Customer", value= search ? search : '')
            th(scope='col') Phone & Email
            th(scope='col') Product
            th(scope='col') Message
            th(scope='col') Delete
        tbody
          if orders
            each order in orders
              tr
                td  #{order.name}
                td
                  p.mb-2  #{order.phone}
                  p.mb-2  #{order.email}
                td
                  each cart in order.carts
                    .cart
                      h5.mb-1  #{cart.name}
                      p.mb-1   #{cart._id}
                td  #{order.mess}
                td
                  button.btn.btn-sm.btn-danger  &times;
            